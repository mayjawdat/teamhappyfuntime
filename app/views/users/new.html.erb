<%= form_for @user, html: {class: 'registration'} do |f| %>

  <p><%= label_tag(:username, "Username") %>
  <%= f.text_field :username %></p>

  <p><%= label_tag(:full_name, "Full name") %>
  <%= f.text_field :full_name %></p>

  <p><%= label_tag(:password, "Password") %>
  <%= f.text_field :password %></p>

  <p><%= label_tag(:phone, "Phone") %>
  <%= f.text_field :phone %></p>

  <p><%= label_tag(:email, "Email") %>
  <%= f.text_field :email %></p>

  <%= radio_button_tag(:is_mentor, true) %>
  <%= label_tag(:is_mentor_true, "Mentor") %>
  <%= radio_button_tag(:is_mentor, false) %>
  <%= label_tag(:is_mentor_false, "Student") %>

  <p><%= f.submit %></p>

<% end %>
